<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemBackground">@color/white_universal</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="TextDisplayMedium500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>

    <style name="TextDisplayBold700">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
    </style>

    <style name="TextDisplayRegular400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
    </style>

    <style name="PageTitle" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="PageListItem" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="PageListTitle" parent="TextDisplayBold700">
        <item name="android:textSize">@dimen/dim_32sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="VacancyItemBig" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="VacancyItemSmall" parent="TextDisplayRegular400">
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>
</resources>

