<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <style name="TextDisplayMedium500">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">500</item>
    </style>

    <style name="TextDisplayBold700">
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
    </style>


    <style name="TextDisplayRegular400">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:ignore="NewApi">400</item>
    </style>


    <style name="SearchEditText" parent="TextDisplayRegular400">
        <item name="android:textColor">@color/black_universal</item>
        <item name="android:textColorHint">@color/day_gray_night_white</item>
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <!-- Start Team Infromation -->

    <style name="PageTitle" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="PageTitleReverseColor" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="VacancyTitle" parent="TextDisplayBold700">
        <item name="android:textSize">@dimen/dim_32sp</item>
    </style>

    <style name="PageListItem" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="PageListTitle" parent="TextDisplayBold700">
        <item name="android:textSize">@dimen/dim_32sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>
    <!-- End Team Infromation -->

    <!-- Start Search -->
    <style name="InformImage" parent="TextDisplayMedium500">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="InformBottomText" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
        <item name="android:maxLength">255</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="VacancyItemBig" parent="TextDisplayMedium500">
        <item name="android:textSize">@dimen/dim_22sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="JobSearchEditText" parent="SearchEditText">
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/sh_day_lgrey_night_gray_round12</item>
    </style>

    <style name="ListTextCount" parent="TextDisplayRegular400">
        <item name="android:background">@drawable/sh_blue_round12</item>
        <item name="android:textColor">@color/day_white_night_black</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- End Search -->

    <style name="VacancyItemSmall" parent="TextDisplayRegular400">
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>

    <style name="VacancyItemSmallReverseColor" parent="TextDisplayRegular400">
        <item name="android:textSize">@dimen/dim_16sp</item>
        <item name="android:textColor">@color/day_black_night_white</item>
    </style>
</resources>

